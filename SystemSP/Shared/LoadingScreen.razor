@if (isLoaded)
{
    @ChildContent
}
else
{
    <div class="cont-spinner">
        <div class="spinner"></div>
    </div>
}

@code {
    bool isLoaded;

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(4000);
        isLoaded = true;
    }
}
