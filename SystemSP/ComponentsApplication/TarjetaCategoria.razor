@inject NavigationManager NavigationManager;

<div class="background-categorias" @onclick="@(()=> NavigationManager.NavigateTo("/VistaProyectos/1"))">
    <div class="divCotegoria">
        <div class="tajeta_categoria">
            <span class="centerSpan">
                <img src="/images/IconosCategorias/IconosColor/@Image" class="IMG_CategoriaInferior" alt="categoria">
            </span>
            <div>
                <p class="estiloText">@TituloCategoria</p>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Image { get; set; }
    [Parameter]
    public string TituloCategoria { get; set; }
}
