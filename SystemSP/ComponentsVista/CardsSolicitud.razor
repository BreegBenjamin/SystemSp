@inject NavigationManager NavigationManager;
@inject I18nText trasnlator;
@inject SetChangeLanguage _changed;

<aside class="category-solicitud">
        @foreach (var categoriaVista in _categorias)
        {
            <TarjetaSolicitud TituloCategoria="@categoriaVista.NombreCategoria"
                              Image="@categoriaVista.ImageCategoria">
            </TarjetaSolicitud>
        }
</aside>

@code {

    List<ListaCategoriaVista> _categorias = new List<ListaCategoriaVista>();

    protected override async Task OnInitializedAsync()
    {
        var txtCategoria = await trasnlator.GetTextTableAsync<TextCategoriasIndex>(this);
        _categorias = _changed.GetListCategorys(txtCategoria);
    }
}
